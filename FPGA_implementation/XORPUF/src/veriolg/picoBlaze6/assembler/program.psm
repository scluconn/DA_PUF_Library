; Scratchpad memory addresses to store  challenge.	
CONSTANT CHAL_1,  00;
CONSTANT CHAL_2,  01;
CONSTANT CHAL_3,  02;
CONSTANT CHAL_4,  03;
CONSTANT CHAL_5,  04;
CONSTANT CHAL_6,  05;
CONSTANT CHAL_7,  06;
CONSTANT CHAL_8,  07;
CONSTANT CHAL_9,  08;
