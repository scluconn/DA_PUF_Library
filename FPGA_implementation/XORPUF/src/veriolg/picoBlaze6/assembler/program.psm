; Go back to command menu
JUMP   COMMAND_Loop

;*****************************************
;Delay Routine
delay: 
;Put no. of NOP operation you want inside 
;delay routine in register s0.
;*****************************************
COMPARE s0, 00
RETURN Z
LOAD s0, s0  ; NOP operation
SUB s0, 01
JUMP delay
		
;**************************************
 wait_for_response_L0:
;**************************************
INPUT s0, RESP_1_PORT_I
COMPARE s0, 01
RETURN Z
; Delay
LOAD   s0, 0f
CALL   delay
JUMP wait_for_response_L0

