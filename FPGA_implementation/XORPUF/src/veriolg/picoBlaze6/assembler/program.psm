CONSTANT CHAL_12_PORT_O,   0B ;
CONSTANT CHAL_13_PORT_O,   0C ;
CONSTANT CHAL_14_PORT_O,   0D ;
CONSTANT CHAL_15_PORT_O,   0E ;
CONSTANT CHAL_16_PORT_O,   0F ;
CONSTANT CHAL_EN_PORT_O,   10 ;
CONSTANT UART_Tx_PORT_O,   11 ;
